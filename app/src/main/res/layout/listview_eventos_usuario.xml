<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtEventoNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@+id/txtEventoData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEventoData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:text="01/01/2000"
        app:layout_constraintBottom_toBottomOf="@+id/btnMenuEvento"
        app:layout_constraintEnd_toStartOf="@+id/btnMenuEvento"
        app:layout_constraintTop_toTopOf="@+id/btnMenuEvento" />

    <TextView
        android:id="@+id/btnCarregarConvidadosEvento"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="@+id/txtEventoNome"
        app:layout_constraintEnd_toEndOf="@+id/txtEventoData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtEventoNome" />

    <ImageView
        android:id="@+id/btnMenuEvento"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="5dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="TODO"
        app:backgroundTint="@color/deeppurple"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/btnCarregarConvidadosEvento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnCarregarConvidadosEvento"
        app:srcCompat="@drawable/ic_more_vert_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>